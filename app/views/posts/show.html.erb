<header>
  <div class="header-logo">
    <a href="/top"><h2>Tweet_Samp</h2></a>
  </div>
  <ul class="header_menu">
    <a href="/contens"><li>Waht This Site</li></a>
    <a href="/posts"><li>投稿一覧</li></a>
  </ul>
  <div class="contens_haeder">
  </div>
</header>
<main>
  <div class="id_page_button align-items-center mt-4 mb-4">
      <div class="ml-auto posts_button">
        <%= link_to '投稿一覧', posts_path, class: "btn btn-outline-info" %>
      <%= link_to '編集', edit_post_path(@post), class: "btn btn-outline-info" %>
      </div>
  </div>
  <div class="card">
    <div class="card-header bg-info text-white">
        <h4><%= @post.title %></h4>
    </div>
    <div class="card-body">
        <p class="card-text"><%= simple_format @post.content %></p>
    </div>
    <div class="card-footer">
      <p class="text-right font-weight-bold mr-10"><%= @post.name%></p>
    </div>
  </div>

</main>
